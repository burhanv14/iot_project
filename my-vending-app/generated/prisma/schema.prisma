generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Users (optional, for accounts or RFID mapping)
model User {
  id      Int     @id @default(autoincrement())
  email   String  @unique
  name    String?
  // If RFID tags are pre-registered:
  rfidTag String? @unique
  orders  Order[]
}

// Products for sale
model Product {
  id         Int    @id @default(autoincrement())
  name       String
  priceCents Int // price in cents
  stock      Int
}

// Orders (one order per payment)
model Order {
  id         Int      @id @default(autoincrement())
  user       User?    @relation(fields: [userId], references: [id])
  userId     Int?
  status     String   @default("pending") // e.g. pending, paid, completed
  totalCents Int
  createdAt  DateTime @default(now())
  items      String[]
  qty        Int[]
}
